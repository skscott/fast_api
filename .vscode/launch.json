{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üêç FastAPI (module=uvicorn)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--reload",
        "--host", "127.0.0.1",
        "--port", "8000"
      ],
      "cwd": "${workspaceFolder}/",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/",
        "PYTHONWARNINGS": "ignore"
      }
    }
  ]
}
